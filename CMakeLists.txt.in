cmake_minimum_required(VERSION 3.11)
project(googletest-download NONE)

message(STATUS "CMAKE_SOURCE_DIR: ${CMAKE_SOURCE_DIR}")
message(STATUS "GOOGLETEST_SRC: ${GOOGLETEST_SRC}")
message(STATUS "GOOGLETEST_SRC_INSTALL_DIR: ${GOOGLETEST_SRC_INSTALL_DIR}")

include(ExternalProject)
ExternalProject_Add(googletest
    GIT_REPOSITORY    https://github.com/google/googletest.git
    GIT_TAG           main
    SOURCE_DIR        "${CMAKE_BINARY_DIR}/googletest-src"
    BINARY_DIR        "${CMAKE_BINARY_DIR}/googletest-build"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND     ${CMAKE_COMMAND} -E copy_directory "${CMAKE_SOURCE_DIR}/googletest-src" "${CMAKE_SOURCE_DIR}/thirdparty/benchmark/googletest"
    INSTALL_COMMAND   ""
    TEST_COMMAND      ""
)